export ZOPEN_STABLE_URL="https://github.com/redis/redis.git"
export ZOPEN_STABLE_DEPS="make openssl which pkgconfig check_python"
export ZOPEN_BUILD_LINE="STABLE"
export ZOPEN_CATEGORIES="database"
